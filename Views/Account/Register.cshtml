@using WebApplication2.Models.Account;
@using static WebApplication2.Models.Account.Register;
@model Register
@{
    ViewData["Title"] = "Register";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Register user</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Fname"></label>
            <input asp-for="Fname" class="form-control" />
            <span asp-validation-for="Fname" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Lname"></label>
            <input asp-for="Lname" class="form-control" />
            <span asp-validation-for="Lname" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PassRepeat"></label>
            <input asp-for="PassRepeat" class="form-control" />
            <span asp-validation-for="PassRepeat" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Bday"></label>
            <input asp-for="Bday" class="form-control" />
            <span asp-validation-for="Bday" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="gender" class="control-label"> Gender </label>
            <select name="gender" id="gender" asp-items="Html.GetEnumSelectList<Gender>()">
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-asp-controller="Account" asp-action="Login" class="btn btn-secondary" style="width:150px"> Login</a>
        <a asp-asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to home</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

