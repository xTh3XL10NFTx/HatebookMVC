@using WebApplication2.Models.Account;
@using static WebApplication2.Models.Account.Login;
@model Login
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Log in</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Log in</button>
        <a asp-asp-controller="Account" asp-action="Register" class="btn btn-secondary" style="width:150px">Register</a></div>
        <a asp-asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to home</a></div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

